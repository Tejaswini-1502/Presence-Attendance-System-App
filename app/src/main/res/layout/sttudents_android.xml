<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/stud_back_bg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="STUDENT LIST: "
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        >

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/Aashna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Aashna"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Abhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Abhi"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Ayush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Ayush"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Dhanvin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Dhanvin"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Dharthi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Dharthi"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Kushi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Kushi"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Milana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Milana"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Prajaktha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Prajaktha"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Sejal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Sejal"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Siddharth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Siddharth"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Suhas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Suhas"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/Yohana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Yohana"
            android:textSize="30dp" />


    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Submit Attendance"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:layout_below="@+id/linearLayout"
        android:backgroundTint="#9C27B0"/>


</RelativeLayout>